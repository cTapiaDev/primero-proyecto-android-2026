<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen">

    <include
        android:id="@+id/headerContainer"
        layout="@layout/component_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toTopOf="@id/footerContainer">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="16dp"
            android:alignmentMode="alignMargins"
            android:clipToPadding="false">

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                android:id="@+id/cardUsers"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/brand_secondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        style="@style/DashboardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuarios"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                android:id="@+id/cardTabs"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        app:tint="@color/brand_secondary"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        style="@style/DashboardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabs"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

    </ScrollView>

    <include
        android:id="@+id/footerContainer"
        layout="@layout/component_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Ejercicio
        "El cliente quiere un texto abajo que diga "VersiÃ³n 1.0".
        Pero, no queremos ensuciar nuestro activity_dashboard

        1. Crear un component_footer.xml
        2. Utilizar <include> para agregarlo fuera del ScrollView

        Tip: El componente solo debe tener un texto y un fondo gris.
     -->

</androidx.constraintlayout.widget.ConstraintLayout>